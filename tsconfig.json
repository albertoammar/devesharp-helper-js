{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"incremental": true
	},
	"include": ["src/**/*"],
	"exclude": [
        "node_modules",
        "tests",
        "tests/**/*",
        "**/__tests__/**/*",
        "**/__tests__/*",
        "**/*/__tests__/*",
        "dist",
        "**/*spec.ts",
        "./index.ts"
    ]
}
